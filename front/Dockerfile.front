FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install dependencies first (leverage Docker cache)
COPY package*.json .
RUN npm ci

# Copy application files (not strictly needed when using volumes, but safe for build)
COPY . .

# Vite dev server settings
EXPOSE 5173

# Run Vite in dev mode and bind to all interfaces
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]
