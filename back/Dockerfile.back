FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install dependencies first (leverage Docker cache)
COPY package*.json .
RUN npm ci

# Copy application files (not strictly needed when using volumes, but safe for build)
COPY . .

# Ensure NestJS runs on the expected port
ENV PORT=3500
ENV CHOKIDAR_USEPOLLING=true
EXPOSE 3500

# Run NestJS in watch mode for development
CMD ["npm", "run", "start:dev"]
