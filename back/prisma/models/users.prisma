model User {
  id              String    @id @default(uuid())
  email           String    @unique
  password        String
  name            String?
  role            UserRole  @default(STUDENT)
  isEmailVerified Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@map("users")
}

enum UserRole {
  STUDENT
  TEACHER
  ADMIN
}